@model Bangazon.Models.ProductViewModels.ProductTypesViewModel

@{
    ViewData["Title"] = "Product Types";
}
<br/>
<h1>Product Types</h1>

@foreach (var item in Model.Types)
{
<h4>@Html.DisplayFor(modelItem => item.TypeName) (@item.ProductCount)</h4>
    <ul>
        @foreach(var product in item.Products)
        {
        <li>@Html.ActionLink(product.Title, "Details", new { id = product.ProductId }, new { @class = "btn btn-link" })</li>
        }
    </ul>
            
           
}
