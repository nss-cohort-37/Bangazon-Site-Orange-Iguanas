@model IEnumerable<Bangazon.Models.PaymentType>

@{
    ViewData["Title"] = "Index";
}

<h1>Payment Types</h1>

<p>
    <a  class="btn btn link" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>

            <td>
                <a class="btn btn link" asp-action="Edit" asp-route-id="@item.PaymentTypeId">Edit</a> |
                <a class="btn btn link" asp-action="Delete" asp-route-id="@item.PaymentTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn link" asp-controller="Profiles" asp-action="Index">Back to My Profile</a>
